page{background-color:#fff;}

.guide_swiper {
  width: 100%;
  height: 100vh;
}

.guide_swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
    bottom: 50rpx;
}

.guide_swiper .wx-swiper-dot {
    width: 16rpx;
    display: inline-flex;
    height: 16rpx;
    justify-content: space-between;
    border-radius: 50%;
}

.guide_swiper .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: #6C6F82;
    border-radius: 50%;
}

.guide_swiper .wx-swiper-dot-active {
    background: #4b36eb;
    border-radius: 50%;
}

.guide_swiper .wx-swiper-dot-active::before {
    background: #4b36eb;
    border-radius: 50%;
}

.slide-image {
  margin: 0 auto;
  height: 100vh;
  width: 100%;  
}

.next_btn {
  position: fixed;
  z-index: 1000;
  top: 85%;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  left: 240rpx;
  font-size: 34rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: none;
  border:1px solid #407af4;
  opacity: 0.9;
  color: #407af4;
  border-radius: 100rpx;
}